{
    "manifest_version": 2,
    "name": "Cjax",
    "description": "Make cross domain XHR as you wish",
    "version": "0.1.0",
    "background": {
        "scripts": [
            "js/chromep.js",
            "js/background.js"
        ]
    },
    "externally_connectable": {
        "matches": [
            "*://*.dropboxusercontent.com/*"
        ]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "js/cjax-loader.js"
        ],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "js/cjax.js"
    ],
    "permissions": [
        "storage",
        "<all_urls>"
    ]
}
